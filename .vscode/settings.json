{
  "files.associations": {
    "**/templates/**/*.html": "handlebars",
    "**/templates/**/*.xml": "handlebars",
    "**/styles/**/*.css": "postcss"
  },
  "emmet.includeLanguages": {
    "postcss": "css"
  },
  "[handlebars]": {
    "editor.tabSize": 2
  },
  "[html]": {
    "editor.tabSize": 2
  },
  "[xml]": {
    "editor.tabSize": 2
  },
  "[markdown]": {
    "editor.tabSize": 2
  },
  "editor.formatOnSave": false
}
